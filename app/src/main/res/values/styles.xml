<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="titulos" parent="titulo_resultados">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:layout_marginTop">@dimen/espacio_entre_vistas</item>
    </style>
    <style name="titulo_resultados">
        <item name="android:padding">8dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/size_de_titulo</item>
    </style>
    <style name="boton_resultados" parent="titulo_resultados">
        <item name="android:background">@color/colorAccent</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
    <style name="layout_resultados" parent="titulo_resultados">
        <item name="android:background">@android:color/darker_gray</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="estilo_de_EditText">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textColorHint">@color/colorAccent</item>
    </style>

</resources>
